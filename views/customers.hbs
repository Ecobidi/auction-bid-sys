  <div class="col-12 py-2">
    <div class="d-flex justify-content-between">
      <h2>Customers</h2>
    </div>
  </div>

  <div class="col-12 py-2">
    <form class="form-inline" method="POST" action="/customers">
      <div class="form-group py-2">
        <input class="form-control" name="search">
        <button type="submit" class="btn btn-sm btn-primary">Search</button>
      </div>
    </form>
    <h4 class="mb-0 bg-info py-2 text-white text-center mt-4">Registered Customers</h4>
    <table class="table table-striped table-bordered">
      <thead>
        <tr> 
          <th>#</th>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each customers}}
        <tr>
          <td>{{this.serial_number}}</td>
          <td>{{this.email}}</td>
          <td>{{this.first_name}}</td>
          <td>{{this.last_name}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.address}}</td>
          <td>
            <a class="btn btn-danger btn-sm text-white" href="/customers/remove/{{this.serial_number}}"><i class="fa fa-times-circle" aria-hidden="true"></i></a>
        </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>