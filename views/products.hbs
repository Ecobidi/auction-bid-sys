  <div class="col-12 py-2">
    <div class="d-flex justify-content-between">
      <h2>Products</h2>
      <div>
        <a href="/products/new" class="btn btn-primary">Add New Product</a>
      </div>
    </div>
  </div>

  <div class="col-12 py-2">
    <form class="form-inline" method="POST" action="/products">
      <div class="form-group py-2">
        <input class="form-control" name="search">
        <button type="submit" class="btn btn-sm btn-primary">Search</button>
      </div>
    </form>
    <h4 class="mb-0 bg-info py-2 text-white text-center mt-4">List of Products</h4>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Image</th>
          <th>Category</th>
          <th>Product Info</th>
          <th>Other Info</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.serial_number}}</td>
          <td>
            {{#if this.image}}
            <img src="{{this.image}}" class="mini-square-thumbnail" alt=""></td>
            {{/if}}
          </td>
          <td>{{this.category}}</td>
          <td>
            <p>Name: <strong>{{this.name}}</strong></p>
            <p>Description: <strong>{{this.description}}</strong></p>
          </td>
          <td> 
            <p>Regular Price: <strong>{{this.regular_price}}</strong></p>
            <p>Start Price: <strong>{{this.starting_price}}</strong></p>
            <p>End Date/Time: <strong>{{this.end_time}}</strong></p>
            
          </td>
          <td>
            <div class="btn-group" role="group" aria-label="Button group">
              {{!-- <a href="" class="btn btn-info btn-sm"> <i class="fa fa-binoculars"></i> </a>
               --}}
              <a href="/products/update/{{this.serial_number}}" class="btn btn-warning btn-sm"> <i class="fa fa-edit"></i> </a>
              <a onclick="return confirm('Do you want to remove product?');" class="btn btn-danger btn-sm text-white" href="/products/remove/{{this.serial_number}}" ><i class="fa fa-times" aria-hidden="true"></i></a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>